<div class="row">
  <div class="col-md-8">
    <%=link_to(@listing.image.url , 'data-toggle' =>  "lightbox" , :alt => "listing image") do %>
      <% image_tag @listing.image.url, :class => "img-responsive img-rounded img-fluid" %>
    <%end%>
  </div>
  <!-- /.col-md-8 -->
  <div class="col-md-4">
    <h1><%= @listing.name %></h1>
    <h4 class="title-price"><small>Price</small></h4>
    <h3 style="margin-top:0px;"><%= number_to_currency(@listing.price) %></h3>
    <h4><small><%= @listing.description %></small></h4>
    <br>
    <%= link_to(new_listing_order_path(@listing), class: "btn btn-success btn-block", data: { no_turbolink: true }) do %>
        <span style="margin-right:20px" class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Buy It Now!
    <%end%>
  </div>
  <!-- /.col-md-4 -->
</div>
<br>
<% if current_user == @listing.user %>
<div class="row">
  <div class="col-lg-12">
    <div class="well text-center">

          <%= link_to(edit_listing_path(@listing), class: "btn btn-primary") do %> <span class="glyphicon glyphicon-pencil"></span> <%end%> | <%= link_to(@listing, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary") do %>
          <span class="glyphicon glyphicon-trash"></span> <%end%>
    </div>
  </div>
</div>
<% end %>

<script type="text/javascript">
    $(document).on('click', '[data-toggle="lightbox"]', function(event) {
        event.preventDefault();
        $(this).ekkoLightbox();
    });
</script>
